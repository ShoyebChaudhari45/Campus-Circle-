<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#D9CACA"
    android:gravity="center">

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Header Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:text="We value your feedback!"
            android:textColor="#333"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Name Input -->
        <EditText
            android:id="@+id/feedbackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#cccccc"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="8dp"
            android:gravity="start"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:padding="12dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/feedbackEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#cccccc"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="8dp"
            android:gravity="start"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- Feedback Message Input -->
        <EditText
            android:id="@+id/feedbackMessage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="-9dp"
            android:backgroundTint="#cccccc"
            android:gravity="top|start"
            android:hint="  Write your feedback here"
            android:inputType="textMultiLine"
            android:lineSpacingExtra="8dp"
            android:padding="12dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitFeedbackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#6200EA"
            android:elevation="4dp"
            android:padding="16dp"
            android:text="Submit"
            android:textColor="#fff"
            android:textSize="16sp" />

        <!-- Developer Info at the bottom -->


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:text="Developer: Shoyeb Chaudhari"
        android:textColor="#888"
        android:textSize="14sp" />

</LinearLayout>
