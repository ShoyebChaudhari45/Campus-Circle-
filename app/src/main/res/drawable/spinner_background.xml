<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="@color/black"/>  <!-- Black border -->
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item android:right="10dp" android:top="10dp" android:bottom="10dp">
        <bitmap android:gravity="right|center_vertical" android:src="@drawable/drop" /> <!-- Vector icon -->
    </item>
</layer-list>
