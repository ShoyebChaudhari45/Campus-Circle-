<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#D9CACA"
    app:cardElevation="6dp"
    android:background="#D9CACA">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp">


<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/detail_event_speaker_image"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:src="@drawable/alumni_image1"
    android:scaleType="centerCrop"
    android:layout_marginBottom="16dp"
    android:layout_centerInParent="true"
    app:shapeAppearanceOverlay="@style/roundedImageView"
    app:shapeAppearance="@style/roundedImageView"
    android:background="@drawable/circular_border" /> <!-- Use a custom shape drawable for the circular border -->

<!-- Speaker Name -->
<TextView
    android:id="@+id/detail_event_speaker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Speaker Name"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginBottom="8dp"
    android:textColor="#333333"/>

<!-- Event Title -->
<TextView
    android:id="@+id/detail_event_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Event Title"
    android:textSize="20sp"
    android:textStyle="bold"
    android:layout_marginBottom="8dp"
    android:textColor="#000000"/>

<!-- Event Date -->
<TextView
    android:id="@+id/detail_event_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Event Date"
    android:textSize="16sp"
    android:textColor="#757575"
    android:layout_marginBottom="8dp"/>

<!-- Event Description -->
<TextView
    android:id="@+id/detail_event_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Event Description"
    android:textSize="16sp"
    android:textColor="#757575"
    android:layout_marginBottom="8dp"/>

<!-- Event Location -->
<TextView
    android:id="@+id/detail_event_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Location"
    android:textSize="14sp"
    android:textColor="#757575"
    android:layout_marginBottom="8dp"/>

<!-- Event Time -->
<TextView
    android:id="@+id/detail_event_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Time"
    android:textSize="14sp"
    android:textColor="#757575"
    android:layout_marginBottom="16dp"/>

<!-- Speaker Bio -->
<TextView
    android:id="@+id/detail_event_speaker_bio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Speaker Bio"
    android:textSize="14sp"
    android:textColor="#757575"
    android:layout_marginBottom="8dp"/>

<!-- Event Agenda -->
<TextView
    android:id="@+id/detail_event_agenda"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Agenda"
    android:textSize="14sp"
    android:textColor="#757575"
    android:layout_marginBottom="8dp"/>

<!-- Contact Info -->
<TextView
    android:id="@+id/detail_event_contact_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Contact Information"
    android:textSize="14sp"
    android:textColor="#757575"/>

</LinearLayout>
    </androidx.cardview.widget.CardView>
